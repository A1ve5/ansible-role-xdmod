[general]
title = "Open XDMoD"
site_address = "http://localhost:8080/"
user_manual = "http://xdmod.sourceforge.net/"
contact_page_recipient = ""
tech_support_recipient = ""

; Don't change this value unless you understand the consequences.
version = "5.0.0"

debug_mode = "off"
debug_recipient = ""

exceptions_logfile = "exceptions.log"
rest_logfile = "rest_exceptions.log"
login_logfile = "logins.log"
rest_general_logfile = "rest_general.log"
extrest_access_logfile = "extrest_general.log"
extrest_exception_logfile = "extrest_exceptions.log"

center_logo = ""
center_logo_width = ""

sql_debug_mode = ""

[features]
xsede = "off"
appkernels = "off"
singlejobviewer = "off"

[internal]
dw_desc_cache = "off"

[rest]
base = "/rest/"
version = "v1"

[auto_login]
; tabs is a comma delimmited list of tab ids that will trigger the login
; page to show up if presented in an non-authenticated state.
tabs = "app_kernels"

[mailer]
sender_name = "Open XDMoD Mailer"
sender_email = ""
captcha_public_key = ""
captcha_private_key = ""

[reporting]
base_path = "/opt/xdmod/share/reporting/jasper_builder"
java_path = ""
phantomjs_path = ""

[logger]
db_engine = "MySQLDB"
host = "localhost"
port = "3306"
user = "{{ xdmod_db_user }}"
pass = "{{ xdmod_db_password }}"
database = "mod_logger"
table = "log_table"
email_from = ""
email_to = ""
email_subject = "Open XDMoD Logger"
default_level_console = "NOTICE"
default_level_file = "WARNING"
default_level_db = "INFO"
default_level_mail = "ERR"

[database]
db_engine = "MySQLDB"
host = "localhost"
port = "3306"
user = "{{ xdmod_db_user }}"
pass = "{{ xdmod_db_password }}"
database = "moddb"

; This section applies to both modw and modw_aggregates.
[datawarehouse]
db_engine = "MySQLDB"
host = "localhost"
port = "3306"
user = "{{ xdmod_db_user }}"
pass = "{{ xdmod_db_password }}"
database = "modw"
rest_logfile = "rest_datawarehouse.log"

[shredder]
db_engine = "MySQLDB"
host = "localhost"
port = "3306"
user = "{{ xdmod_db_user }}"
pass = "{{ xdmod_db_password }}"
database = "mod_shredder"

[hpcdb]
db_engine = "MySQLDB"
host = "localhost"
port = "3306"
user = "{{ xdmod_db_user }}"
pass = "{{ xdmod_db_password }}"
database = "mod_hpcdb"

[slurm]
sacct = "sacct"

